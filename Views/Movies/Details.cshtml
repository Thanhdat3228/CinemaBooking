@model CinemaBooking.Models.ViewModels.MovieDetailsViewModel

@{
    ViewData["Title"] = "Chi tiết phim";
    var today = DateTime.Now;
}

<div class="container mt-4">
    <div class="row">
        <!-- POSTER -->
        <div class="col-md-4 text-center">
            <img src="@Model.Movie.PosterUrl"
                 class="img-fluid rounded shadow mb-3"
                 style="max-height:420px" />
        </div>

        <!-- THÔNG TIN PHIM -->
        <div class="col-md-8">
            <h2 class="mb-3">@Model.Movie.Title</h2>

            <p>
                <strong>Thể loại:</strong> @Model.Movie.Genre <br />
                <strong>Thời lượng:</strong> @Model.Movie.DurationMinutes phút <br />
                <strong>Ngày phát hành:</strong>
                @Model.Movie.ReleaseDate.ToString("dd/MM/yyyy")
            </p>

            <p class="mt-3">
                <strong>Mô tả:</strong><br />
                @Model.Movie.Description
            </p>

            <hr />

            <!-- CHỌN NGÀY -->
            <div class="mb-3">
                <label class="form-label fw-bold">📅 Chọn ngày</label>
                <select id="dateSelect" class="form-select">
                    <option value="">-- Chọn ngày --</option>
                    @foreach (var d in Model.ShowTimes
                                        .Select(x => x.TimeSlot.Date)
                                        .Distinct()
                                        .OrderBy(x => x))
                    {
                        <option value="@d.ToString("yyyy-MM-dd")">
                            @d.ToString("dd/MM/yyyy")
                        </option>
                    }
                </select>
            </div>

            <!-- CHỌN RẠP -->
            <div class="mb-3">
                <label class="form-label fw-bold">🏢 Chọn rạp</label>
                <select id="cinemaSelect" class="form-select" disabled>
                    <option value="">-- Chọn rạp --</option>
                    @foreach (var c in Model.ShowTimes
                                        .Select(x => x.Cinema)
                                        .Distinct())
                    {
                        <option value="@c?.Id">@c?.Name</option>
                    }
                </select>
            </div>

            <!-- LỊCH CHIẾU -->
            <h4 class="mt-4 mb-3">🎬 Lịch chiếu</h4>

            <div id="showtimeContainer"
                 class="d-flex flex-wrap gap-3"
                 style="display:none">

                @foreach (var st in Model.ShowTimes)
                {
                    var isExpired = st.TimeSlot < DateTime.Now;

                    <div class="showtime-card border rounded p-3 shadow-sm"
                         style="min-width:240px; display:none"
                         data-date="@st.TimeSlot.ToString("yyyy-MM-dd")"
                         data-cinema="@st.Cinema?.Id">

                        <div class="mb-2">
                            🕒 <strong>@st.TimeSlot.ToString("HH:mm")</strong><br />
                            📍 @st.Cinema?.Name
                        </div>

                        @if (isExpired)
                        {
                            <button class="btn btn-secondary w-100" disabled>
                                ⛔ Đã qua giờ
                            </button>
                        }
                        else
                        {
                            <a asp-controller="Bookings"
                               asp-action="SelectSeats"
                               asp-route-showTimeId="@st.Id"
                               class="btn btn-danger w-100">
                                🎟️ Đặt vé
                            </a>
                        }
                    </div>
                }
            </div>

            <p id="noResult"
               class="text-muted"
               style="display:none">
                Không có lịch chiếu phù hợp
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}
