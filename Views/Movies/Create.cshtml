@model CinemaBooking.Models.Movie

@{
    ViewData["Title"] = "Thêm phim";
}

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center">
                <h4 class="mb-0">🎬 Thêm phim mới</h4>
            </div>

            <div class="card-body p-4">
                <form asp-action="Create" method="post">

                    <div class="mb-3">
                        <label class="form-label">Tên phim</label>
                        <input asp-for="Title" class="form-control" placeholder="Nhập tên phim" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="3"
                                  placeholder="Mô tả nội dung phim"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Poster URL</label>
                        <input asp-for="PosterUrl" class="form-control"
                               placeholder="/images/movie.jpg" />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Thể loại</label>
                            <input asp-for="Genre" class="form-control"
                                   placeholder="Sci-Fi, Action..." />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Thời lượng (phút)</label>
                            <input asp-for="DurationMinutes" type="number"
                                   class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Đánh giá</label>
                            <input asp-for="Rating" class="form-control"
                                   placeholder="PG-13, R..." />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Ngày phát hành</label>
                            <input asp-for="ReleaseDate" type="date"
                                   class="form-control" />
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            ⬅ Quay lại
                        </a>

                        <button type="submit" class="btn btn-success px-4">
                            💾 Lưu phim
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
