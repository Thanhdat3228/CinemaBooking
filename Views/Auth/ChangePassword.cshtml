@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Đổi Mật Khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Đổi Mật Khẩu</h2>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger alert-dismissible fade show" })
                    }

                    <form asp-action="ChangePassword" asp-controller="Auth" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="CurrentPassword" class="form-label">Mật Khẩu Hiện Tại</label>
                            <input asp-for="CurrentPassword" class="form-control" placeholder="Nhập mật khẩu hiện tại" />
                            <span asp-validation-for="CurrentPassword" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="NewPassword" class="form-label">Mật Khẩu Mới</label>
                            <input asp-for="NewPassword" class="form-control" placeholder="Nhập mật khẩu mới" />
                            <span asp-validation-for="NewPassword" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Xác Nhận Mật Khẩu</label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu mới" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small d-block mt-1"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">Cập Nhật Mật Khẩu</button>
                        <a asp-action="Index" asp-controller="User" class="btn btn-secondary w-100">Hủy</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
